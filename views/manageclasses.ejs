<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage classes</title>
  <link rel="stylesheet" href="./css/sidebar.css">
  <link rel="stylesheet" href="./css/manageclasses.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <div class="sidebar">
    <a class="active" href="/dashboard">Dashboard</a>
    <a href="/managestudents">Manage Students</ a>
    <a href="/manageteachers">Manage Teachers</a>
    <a href="/manageclasses">Manage classes</a>
    <a class="Logout-btn" href="/">Logout</a>
  </div>
  <div class="content">
    <table class="table">
      <h1 style="text-align: center; margin-bottom: 50px;">List Of Classes</h1>
      <thead>
        <tr>
          <th scope="col">Class #</th>
          <th scope="col">Class Head</th>
          <th scope="col">Section</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% classesData.forEach(num => { %>
          <tr>
            <th scope="row"><%= num.classnumber %></th>
          <td scope="row"><%= num.classhead %></td>
          <td scope="row"><%= num.section %></td>
          <td>
            <form action="/delete-classes" method="post", style="display: inline;">
              <input type="hidden" name="classId" value="<%= num._id%>">
              <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
            </form>
          </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <button class="btn btn-danger" id="add-class" style="float: right;">Add A Class</button>
  </div>

  <script src="https://kit.fontawesome.com/788fbf9df0.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
    const redirect = document.getElementById("add-class");
    redirect.addEventListener("click", ()=> {
      window.location.href = "/add-class";
    })
  </script>
</body>
</html>