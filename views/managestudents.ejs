<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Students</title>
  <link rel="stylesheet" href="./css/sidebar.css">
  <link rel="stylesheet" href="./css/student.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
  <div class="sidebar">
    <a class="active" href="/dashboard">Dashboard</a>
    <a href="/managestudents">Manage Students</ a>
    <a href="/manageteachers">Manage Teachers</a>
    <a href="/manageclasses">Manage classes</a>
    <a class="Logout-btn" href="/">Logout</a>
  </div>

  <div class="content">
    <h1 class="lst-std">List of students</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Roll</th>
          <th scope="col">Name</th>
          <th scope="col">Class</th>
          <th scope="col">Subject</th>
          <th scope="col">Contact</th>
          <th scope="col">Fees  </th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% studentsData.forEach(Data => { %>
         <tr>
          <td><%= Data.roll %></td>
          <td><%= Data.name %></td>
          <td><%= Data.cls %></td>
          <td><%= Data.subject %></td>
          <td><%= Data.contact %></td>
          <td><%= Data.fees %></td>
          <td>
            <form action="/delete-student" method="post", style="display: inline;">
              <input type="hidden" name="studentId" value="<%= Data._id%>">
              <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
            </form>
          </td>
         </tr>
        <% }) %>
      </tbody>
    </table>  
    <button class="btn btn-danger" style="float: right;" id="add-stud">Add a Student</button>
  </div>





<!-- ====================================================================================== -->
  <!-- js to redirect to add student page-->
  <script>
    let redirect2 = document.getElementById("add-stud")
    redirect2.addEventListener("click", ()=>{
      window.location.href = "/add-stud"
    })
  </script>
  <!-- ==================================================================================== -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/788fbf9df0.js" crossorigin="anonymous"></script>
</body>
</html>