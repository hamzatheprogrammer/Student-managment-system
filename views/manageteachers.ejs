<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Teachers</title>
  <link rel="stylesheet" href="./css/sidebar.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="./css/teacher.css">
</head>
<body>
  <div class="sidebar">
    <a class="active" href="/dashboard">Dashboard</a>
    <a href="/managestudents">Manage Students</ a>
    <a href="/manageteachers">Manage Teachers</a>
    <a href="/manageclasses">Manage classes</a>
    <a class="Logout-btn" href="/">Logout</a>
  </div>

  <div class="content">
    <h1 class="lst-teacher" >List Of Teachers</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Cnic</th>
          <th scope="col">Address</th>
          <th scope="col">Contact</th>
          <th scope="col">Salary</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% teachersData.forEach(Data => { %>
          <tr>
            <td><%= Data.name %></td>
            <td><%= Data.cnic %></td>
            <td><%= Data.address %></td>
            <td><%= Data.contact %></td>
            <td><%= Data.salary %></td>
            <td>
              <form action="/delete-teacher" method="post", style="display: inline;">
                <input type="hidden" name="teacherId" value="<%= Data._id%>">
                <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <button class="btn btn-danger" id="ad_teach" style="float: right;">Add A Teacher</button>

  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/788fbf9df0.js" crossorigin="anonymous"></script>
  <script>
    const ad_teach = document.getElementById("ad_teach");
    ad_teach.addEventListener("click", ()=>{
      window.location.href = "/addteacher";
    })
  </script>

</body>
</html>